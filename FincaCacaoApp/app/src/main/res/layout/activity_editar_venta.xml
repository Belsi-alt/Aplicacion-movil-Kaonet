<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_estandar"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header con ID de venta -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Editar Venta"
                android:textColor="@color/verde_principal"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvIdVenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Card Principal - MISMA ESTRUCTURA QUE AGREGAR VENTA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:elevation="4dp">

            <!-- Cliente -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cliente"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etCliente"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:hint="Nombre del cliente"
                android:layout_marginBottom="16dp" />

            <!-- Cantidad y MÃ©todo de Pago -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cantidad"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/etCantidad"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext_background"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textSize="16sp"
                        android:hint="0.0"
                        android:inputType="numberDecimal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MÃ©todo de Pago"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/spinnerMetodoPago"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext_background"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Precio Unitario -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precio Unitario"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etPrecioUnitario"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:hint="$0.00"
                android:inputType="numberDecimal"
                android:layout_marginBottom="16dp" />

            <!-- Fecha de Venta -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de Venta"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etFechaVenta"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:hint="YYYY-MM-DD"
                android:focusable="false"
                android:clickable="true"
                android:layout_marginBottom="24dp" />

            <!-- SecciÃ³n Total -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edittext_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0"
                    android:textColor="@color/verde_principal"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- BOTONES ESPECÃFICOS PARA EDITAR -->
            <Button
                android:id="@+id/btnGuardarCambios"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="ðŸ’¾ Guardar Cambios"
                android:textSize="18sp"
                android:backgroundTint="@color/verde_principal"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnEliminarVenta"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="ðŸ—‘ï¸ Eliminar Venta"
                android:textSize="18sp"
                android:backgroundTint="#FF5252"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- InformaciÃ³n adicional -->
        <TextView
            android:id="@+id/tvInfoAdicional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âœï¸ Editando venta registrada"
            android:textColor="#666666"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:padding="8dp" />

    </LinearLayout>

</ScrollView>